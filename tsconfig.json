{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "baseUrl": "./resources/js",
        "paths": {
            "@/*": ["*"]
        },
        "lib": ["esnext", "dom",
            "dom.iterable",
            "scripthost"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
    },
    "include": ["./resources/js/**/*.ts", "./resources/js/**/*.vue"],
    "exclude": [
      "node_modules"
    ]
}